<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.bkhezry.weather">

    <uses-permission android:name="android.permission.INTERNET" />

  
        <activity
            android:name=".utils.ui.activity.HourlyActivity"
            android:exported="true"
            android:theme="@style/TransitionTheme" />
        <activity
            android:name=".utils.ui.activity.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".utils.ui.activity.BaseActivity" />
    </application>

</manifest>
